@model SymCMS.ViewModels.PostViewModel

@{
    ViewBag.Title = "Delete";
    ViewData.Add("partial", 1);
    // Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div class="m-1">

    @Html.Partial("~/Views/Posts/Details.cshtml", Model, ViewData)

    <div class="row mt-2">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <input type="submit" value="Delete" class="btn btn-danger mr-2" />

        }

        <form action="/Admin/PostsView">
            <input type="submit" value="Back to List" class="btn btn-outline-secondary" />
        </form>
    </div>
</div>
